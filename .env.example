# === Voyage API ===
VOYAGE_API_KEY=your_voyage_api_key_here
VOYAGE_EMBED_MODEL=voyage-code-3
VOYAGE_RERANK_MODEL=rerank-2.5
VOYAGE_RPM_LIMIT=2000
VOYAGE_TPM_LIMIT=3000000

# === Qdrant ===
QDRANT_URL=http://localhost:6333

# === Server ===
# 0.0.0.0 监听所有网卡，127.0.0.1 仅本地
SERVER_HOST=0.0.0.0
SERVER_PORT=8888
MCP_PORT=8889

# === Logging ===
# DEBUG / INFO / WARNING / ERROR
LOG_LEVEL=INFO
# json（生产，便于日志采集）/ text（开发，人类可读）
LOG_FORMAT=json
LOG_DIR=./storage/logs

# === Embedding ===
CHUNK_SIZE=3000
CHUNK_OVERLAP=200
BATCH_SIZE=128

# === Document Language ===
# 文档主语言 (zh/en/ja)，query 语言与此不匹配时只用 Dense 检索
DOC_LANGUAGE=zh
