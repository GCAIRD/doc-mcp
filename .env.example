# === Voyage API ===
VOYAGE_API_KEY=your_voyage_api_key_here
VOYAGE_EMBED_MODEL=voyage-code-3
VOYAGE_RERANK_MODEL=rerank-2.5
VOYAGE_RPM_LIMIT=2000
VOYAGE_TPM_LIMIT=3000000

# === Qdrant Cloud ===
QDRANT_URL=https://your-cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# === Server ===
SERVER_HOST=0.0.0.0
SERVER_PORT=8900

# === Logging ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=./storage/logs

# === Embedding ===
CHUNK_SIZE=3000
CHUNK_OVERLAP=200
BATCH_SIZE=128

# === Document Language ===
# Primary doc language (zh/en/ja). Dense-only retrieval when query lang differs.
DOC_LANGUAGE=en
