# === Voyage API ===
VOYAGE_API_KEY=your_voyage_api_key_here
VOYAGE_EMBED_MODEL=voyage-code-3
VOYAGE_RERANK_MODEL=rerank-2.5
VOYAGE_RPM_LIMIT=2000
VOYAGE_TPM_LIMIT=3000000

# === Qdrant ===
QDRANT_URL=http://localhost:6334

# === Server ===
# 0.0.0.0 listens on all interfaces, 127.0.0.1 localhost only
SERVER_HOST=0.0.0.0
SERVER_PORT=8900
MCP_PORT=8901

# === Logging ===
# DEBUG / INFO / WARNING / ERROR
LOG_LEVEL=INFO
# json (production, for log aggregation) / text (dev, human readable)
LOG_FORMAT=json
LOG_DIR=./storage/logs

# === Embedding ===
CHUNK_SIZE=3000
CHUNK_OVERLAP=200
BATCH_SIZE=128

# === Document Language ===
# Primary doc language (zh/en/ja). Dense-only retrieval when query lang differs.
DOC_LANGUAGE=en
